root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = tab
indent_size = 2
max_line_length = 120

[*.js]
insert_final_newline = true
indent_style = tab

[*.json]
indent_style = tab

[*.css]
insert_final_newline = true
indent_style = tab

[*.yml]
indent_style = space
